<Window x:Class="c_sharp_multi_source.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:c_sharp_multi_source"
        mc:Ignorable="d"
        Title="MainWindow" Height="470.711" Width="563.821" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid Margin="0,0,0,1">
        <Viewbox HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="517">
            <Grid Height="424" Width="512">
                <Image x:Name="camera" Margin="10,16,-10,-16"/>
            </Grid>
        </Viewbox>
        <TextBox x:Name="log" HorizontalAlignment="Left" Height="45" Margin="10,369,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="353" IsReadOnly="true" TextChanged="log_changed"/>
