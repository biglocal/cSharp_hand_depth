        <Label x:Name="label_l_hand" Content="Left Hand" HorizontalAlignment="Left" Margin="412,102,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.307,-12.702"/>
        <TextBox x:Name="textBox_r_hand" HorizontalAlignment="Left" Height="23" Margin="412,47,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="95"/>
        <TextBox x:Name="textBox_l_hand" HorizontalAlignment="Left" Height="23" Margin="412,132,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="95"/>
        <Slider x:Name="slider_forward" HorizontalAlignment="Left" Margin="412,169,0,0" VerticalAlignment="Top" Width="69" ValueChanged="slider_forward_changed" Minimum="10" Maximum="100" Value="10"/>
        <Slider x:Name="slider_backward" HorizontalAlignment="Left" Margin="412,208,0,0" VerticalAlignment="Top" Width="69" ValueChanged="slider_backward_changed" Minimum="10" Maximum="100" Value="10"/>
    </Grid>
</Window>
